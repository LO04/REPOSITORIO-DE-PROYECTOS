@model IEnumerable<EventosUPC.Models.Evento_Servicio>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <button class="btn btn-lg" type="submit">@Html.ActionLink("Agregar Servicio", "Create")</button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Evento.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Servicio.nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Evento.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Servicio.nombre)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_evento_servicio }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_evento_servicio }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_evento_servicio })
        </td>
    </tr>
}

</table>

@model IEnumerable<EventosUPC.Models.Evento_Actividad>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <button class="btn btn-lg" type="submit">@Html.ActionLink("Agregar Actividad", "Create")</button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.hora_inicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.hora_fin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Actividad.nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Evento.nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.hora_inicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hora_fin)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Actividad.nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Evento.nombre)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_evento_actividad }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_evento_actividad }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_evento_actividad })
        </td>
    </tr>
}

</table>

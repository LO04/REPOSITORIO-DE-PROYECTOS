@model TatooTeans.Models.FacturaCompra

@{
    ViewBag.Title = "Pedidos_Boleta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pedidos_Boleta</h2>

<body class="subpage">
    <h2>Detalle de la Boleta</h2>
    @using (Html.BeginForm("RegistrarPedido", "CompraDetalles", FormMethod.Post))
    {
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Metodo de Pago </h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.ID_TipoDePago, "ID_TipoDePago", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ID_TipoDePago", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ID_TipoDePago, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Siguiente" class="btn btn-default" />
            </div>
        </div>
    </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


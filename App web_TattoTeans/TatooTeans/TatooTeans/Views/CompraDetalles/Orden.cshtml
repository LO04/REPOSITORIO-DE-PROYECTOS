@model IEnumerable<TatooTeans.Models.CompraDetalle>

    @{
    ViewBag.Title = "Orden";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<TatooTeans.Models.Producto> lista = ViewBag.Productos;
    int ncontador = ViewBag.Contador;
    string nombre = ViewBag.Nombre;
    }
    <!--Tintas, maquinas,agujas-->
    <h2>Orden</h2>

    <body class="subpage">
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Producto.Nombre)
                    </th>
                    <th>
                        Opciones
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Producto.Nombre)
                    </td>
                    <td>
                        <!-- Html.ActionLink("Delete", "Delete", "PPs", new { id = item.ID }, new { id = item.ID })-->
                    </td>
                </tr>
            }
            </table>
            @using (Html.BeginForm("Pedidos_Boleta", "FacturaCompras", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <input type="submit" value="Siguiente" class="btn btn-default" />
        }

        <div class="col-xs-12 col-sm-9">
            <h2>Bienvenido @nombre ! </h2>
            @* Tintas*@
            <a name="tabla1"></a>
            <table class="table">
                <tr>
                    <th colspan="3" align="center">
                        Tintas
                    </th>
                </tr>
                @for (int i = 0; i < lista.Count(); i++)
            {
                <tr>
                    @if (lista[i].ID_CategoriaProducto == 1)
                {
                    <td>
                        @using (Html.BeginForm("Orden", "CompraDetalles", FormMethod.Post))
                            {
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="id" name="id" value=@lista[i].ID>
                        <input type="hidden" id="ncontador" name="ncontador" value=@ncontador>
                        <h5>Nombre:      @lista[i].Nombre</h5>
                        <p> Precio:      @lista[i].Precio </p>
                        <p> Cantidad:    @lista[i].Cantidad </p>
                        <input type="submit" value="Agregar" class="btn btn-default" />

                            }
                    </td>
                    <td>
                        <img src="~/Imagenes/@lista[i].Descripcion" alt="" width="213" height="194" />
                    </td>
                    }
                </tr>
            }
            </table>

            <a name="tabla2"></a>
            @* Maquinas *@
            <table class="table">
                <tr>
                    <th colspan="3" align="center">
                        Maquinas
                    </th>
                </tr>
                @for (int i = 0; i < lista.Count(); i++)
            {
                <tr>
                    @if (lista[i].ID_CategoriaProducto == 2)
                    {
                    <td>
                        @using (Html.BeginForm("Orden", "CompraDetalles", FormMethod.Post))
                            {
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="id" name="id" value=@lista[i].ID>
                        <input type="hidden" id="ncontador" name="ncontador" value=@ncontador>
                        <h5>Nombre:      @lista[i].Nombre</h5>
                        <p> Precio:      @lista[i].Precio </p>
                        <p> Cantidad:    @lista[i].Cantidad </p>
                        <input type="submit" value="Agregar" class="btn btn-default" />

                            }
                    </td>
                    <td>
                        <img src="~/Imagenes/@lista[i].Descripcion" alt="" width="213" height="194" />
                    </td>
                    }
                </tr>
            }
            </table>

            <a name="tabla3"> </a>
            @* Agujas *@
            <table class="table">
                <tr>
                    <th colspan="3" align="center">
                        Agujas
                    </th>
                </tr>
                @for (int i = 0; i < lista.Count(); i++)
            {
                <tr>
                    @if (lista[i].ID_CategoriaProducto == 3)
                    {
                    <td>
                        @using (Html.BeginForm("Orden", "CompraDetalles", FormMethod.Post))
                            {
                        @Html.AntiForgeryToken()
                        <input type="hidden" id="id" name="id" value=@lista[i].ID>
                        <input type="hidden" id="ncontador" name="ncontador" value=@ncontador>
                        <h5>Nombre:      @lista[i].Nombre</h5>
                        <p> Precio:      @lista[i].Precio </p>
                        <p> Cantidad:    @lista[i].Cantidad </p>
                        <input type="submit" value="Agregar" class="btn btn-default" />

                            }
                    </td>
                    <td>
                        <img src="~/Imagenes/@lista[i].Descripcion" alt="" width="213" height="194" />
                    </td>
                    }
                </tr>
            }
            </table>
        </div><!--/.col-xs-12.col-sm-9-->



    </body>

